<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/day_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_timetable_day_size"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@drawable/item_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/medium_margin">
            <ImageView
                android:id="@+id/color_days_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shape_circle"/>
            <TextView
                android:id="@+id/day_abbreviation_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/very_large_text_size"
                android:textColor="@color/colorTextIcons"/>
            </FrameLayout>
        <TextView
            android:id="@+id/day_decription_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_margin"
            android:textSize="@dimen/medium_text_size"
            android:textColor="@color/colorSecondaryText"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="16dp">
            <TextView
                android:id="@+id/day_today_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/current_day"
                android:gravity="right"
                android:visibility="gone"
                android:textColor="@color/colorDevinderText"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>